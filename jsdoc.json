{
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown", "better-docs/component"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "better-docs": {
            "name": "My React components"
        }
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/"
    }
}